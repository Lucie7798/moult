{% extends 'admin/base.html.twig' %}

{% block title %}Colors{% endblock %}

{% block content %}
    <div class="container">
        <h1 class="title">Colors</h1>

        <h2 class="subtitle">List</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Code</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for color in colors %}
                    <tr>
                        <td>{{ color.name }}</td>
                        <td>{{ color.code }}</td>
                        <td>
                            <a href="{{ path('admin_color_edit', {'id': color.id}) }}" class="button is-small is-primary">Edit</a>
                            <a href="{{ path('admin_color_delete', {'id': color.id}) }}" class="button is-small is-danger">Delete</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <h2 class="subtitle">Create New Color</h2>
        <form method="POST" action="{{ path('admin_color_new') }}">
            <div class="field">
                <label class="label">Name</label>
                <div class="control">
                    {{ form_widget(form.name, {'attr': {'class': 'input'}}) }}
                </div>
            </div>
            <div class="field">
                <label class="label">Code</label>
                <div class="control">
                    {{ form_widget(form.code, {'attr': {'class': 'input'}}) }}
                </div>
            </div>
            <div class="field">
                <div class="control">
                    <button type="submit" class="button is-primary">Create</button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}
